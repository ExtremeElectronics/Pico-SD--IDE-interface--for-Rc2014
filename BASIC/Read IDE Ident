10 REM Read 512 bytes of IDE disk ident
20 REM Via IDE interface
50 B=16
80 REM check IDE live
100 PRINT HEX$(INP(B+7))
120 OUT  B+1 , 01
140 OUT  B+7 , 239
160 PRINT HEX$(INP(B+7))
180 OUT  B+1 , 130
200 OUT  B+7 , 239
210 REM send ident
220 PRINT HEX$(INP(B+7))
240 OUT  B+7 , 236
390 PRINT "Ident Block"
400 FOR A=1 TO 512
420 C=C+1
440 PRINT HEX$(INP(B+0));
450 IF C<16 THEN GOTO 500
460 C=0
480 PRINT
490 GOTO 510
500 PRINT " ";
510 NEXT A

